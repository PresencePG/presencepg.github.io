.my-carousel-switch
  display block
  margin-top ($my-carousel-height / 3)
  img
    height ($my-carousel-height / 3)
  &:active
    opacity 0.5

.my-carousel-main
  height $my-carousel-height

.my-carousel-indicators
  margin-bottom $grid-gutter-width

.bg-spacer
  width 100%
  height 400px

    

.bg-video
  img, video
    position: fixed; 
    top -100px 
    left 0
    min-width: 100%; 
    min-height: 100%;
    width: auto; 
    height: auto; 
    z-index: -100;
    // background: url(polina.jpg) no-repeat;
    // background-size: cover

.sectitle
  margin-bottom 50px

.parallax
  background-size cover

$my-carousel-height_phone = 500px

@media $media-max-phone
  .bg-spacer
    height 200px
  .navbar-brand
    font-size 60px !important
    padding-left ($grid-gutter-width / 2) !important


  .my-carousel-switch
    margin-top ($my-carousel-height_phone / 3)
    img
      height ($my-carousel-height_phone / 3)

  .my-carousel-main
    height $my-carousel-height_phone


